<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RegularTextStyle">
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularButtonStyle">
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="paddingStart">@dimen/regularPadding</item>
        <item name="android:paddingTop">@dimen/verticalPadding</item>
        <item name="android:paddingBottom">@dimen/verticalPadding</item>
        <item name="paddingEnd">@dimen/regularPadding</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="background">@null</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="theme">@style/Theme.KotlinApplicationCompose</item>
    </style>
</resources>
